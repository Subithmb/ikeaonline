    <!--================Category Product Area =================-->
    <section id="card-container" class="cat_product_area section_padding">
        <div  class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="left_sidebar_area">
                        <aside class="left_widgets p_filter_widgets">
                            <div class="l_w_title">
                                
                               <form action="/userShop" method="get">
                                <h3>Search</h3>
                                <input name="search" style="border-color: brown; " type="text">
                               </form>
                            </div>
                            <div class="l_w_title">
                                <h3>Browse Categories</h3>
                            </div>
                           
                            <div class="widgets_inner">
                                <ul class="list">
                                    
                                    <li>
                                        <a href="/userShop">All</a>
                                      
                                    </li>
                                     {{#each categoryData}}
                                    <li>
                                        <a href="/categoryFilter?id={{_id}}">{{categoryName}}</a>
                                       
                                    </li>
                                      {{/each}}

                                </ul>
                            </div>
                        </aside>

       

                       
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product_top_bar d-flex justify-content-between align-items-center">
                              
                            </div>
                        </div>
                    </div>

                    <div  id="pagination-container" class="row align-items-center latest_product_inner">
                        {{#each productData}}
                          <div class="col-lg-4 col-sm-6 shadow-sm rounded pt-2">
                            <div class="single_product_item">
                             <a href="/productDetails?id={{_id}}"><img  style="width: 16rem; height: 20rem;" src="productImages/{{image.[0]}}" alt=""></a> 
                                <div class="single_product_text">
                                    <h4>{{productName}}</h4>
                                    <h3>{{category.categoryName}}</h3>
                                    <h3><i class="fa fa-indian-rupee-sign  "></i> {{price}}</h3>
                                <a href=""  onclick="addToCartlist('{{this._id}}');"> add to cart</a>
                                    
                                     <a href=""  onclick="addToWishlist('{{this._id}}');"><i class="ti-heart"></i></a>
                                  
                                </div>
                            </div>
                        </div>
                        {{/each}}
                       
                     

                      
                        
                       
                    </div>
                    <div class="pt-5">

                    {{ pagination totalPages currentPage }}
                    </div>
                     {{!-- <ul class="d-flex">
                        <li class="active m-2 bg-primary text-white rounded-circle p-2"><a href="/userShop?page=1" class="text-white" >  1   </a></li> 
                        <li class="active m-2 bg-primary text-white rounded-circle p-2"><a href="/userShop?page=2" class="text-white" > 2 </a></li> 
                        <li class="active m-2 bg-primary text-white rounded-circle p-2"><a href="/userShop?page=3" class="text-white" > 3 </a></li>
                      </ul> --}}
                </div>
                
                        
            </div>
        </div>
    </section>
    <!--================End Category Product Area =================-->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
   <script>

      function addToWishlist(proId) {
        
        event.preventDefault()
        $.ajax({
        url: '/wishlistData',
        data: {
        product: proId,},

    method: 'post',
    success: (response) => {
                   
    if (response) {
    swal("Product added to wishlist!", "Product added to Whishlist!", "success");
    } },
    error: (error) => {
    alert(error+'error')
     } },)
 }

 function addToCartlist(proId) {
        
        event.preventDefault()
        $.ajax({
            url: '/cartDataAdding',
            data: { product: proId,},
            method: 'post',
            success: (response) => {
                   
        if (response) {

        swal("Product added to Cart!", "Product added to cart!", "success");
        
        }
        },
            error: (error) => {
            alert('error')
            } },)
}
    
   </script>







